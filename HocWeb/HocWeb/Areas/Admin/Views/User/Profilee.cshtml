@model HocWeb.Models.UserModels
@{
    ViewBag.Title = "Profilee";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutView.cshtml";
}

@section header{

}
@using (Html.BeginForm(Html.BeginForm("Profilee", "User", FormMethod.Post)))
{

    @Html.AntiForgeryToken()
<div class="container-fluid">
    @Html.HiddenFor(model => model.UserID)

    <div class="form-group row">
        <div class="col-sm-3 mb-1 mb-sm-0">
            <p>  FirstName</p>
            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control form-control-user" })
        </div>
        <div class="col-sm-3 ">
            <p>  LastName</p>
            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control form-control-user" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3 mb-1 mb-sm-0">
            <p>  Địa chỉ</p>
            @Html.TextBoxFor(model => model.Address, new { @class = "form-control form-control-user" })

        </div>
        <div class="col-sm-3 ">
            <p>  Số điện thoại</p>
            @Html.TextBoxFor(model => model.Phone, new { @class = "form-control form-control-user" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-3 mb-1 mb-sm-0">
            <p>  Địa chỉ Email</p>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control form-control-user" })
        </div>
        <div class="col-sm-3 ">
            <p>  Số chứng minh nhân dân</p>
            @Html.TextBoxFor(model => model.CMND, new { @class = "form-control form-control-user" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-success" style="width:100px;" />
        </div>
    </div>
</div>

}

